{
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    // Base rules
    "no-undef": ["off"],
    "camelcase": ["warn"],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "no-unused-vars": [
      "off",
      {
        "argsIgnorePattern": "^_",
        "vars": "no"
      }
    ],
    "no-inner-declarations": "off",
    "no-var": "error",
    "no-unexpected-multiline": "error",
    // Prettier rules
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      },
      {
        "usePrettierrc": true
      }
    ]
  }
}
